<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margen_small">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/margenMaterial2"
    android:layout_marginRight="@dimen/margenMaterial2"
    android:layout_marginTop="@dimen/margin5dp"
    android:background="@color/greyBluePrimary"
    android:id="@+id/formulario_layout"
    tools:context="pe.gob.inei.generadorinei.fragments.FormularioFragment">
    <TextView
        android:id="@+id/formulario_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITULO FORMULARIO"
        android:textColor="@color/colorIcons"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/greyBluePrimaryDark"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp1" android:visibility="gone"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp2" android:visibility="gone"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp3" android:visibility="gone"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp4" android:visibility="gone"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp5" android:visibility="gone"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp6" android:visibility="gone"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp7" android:visibility="gone"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp8" android:visibility="gone"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp9" android:visibility="gone"/>
    <include layout="@layout/formulario_sp_layout" android:id="@+id/formulario_sp10" android:visibility="gone"/>
</LinearLayout>
</android.support.v7.widget.CardView>