<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/marco_item_cardview"
    android:layout_width="match_parent"
    android:layout_marginTop="1dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="48dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/marco_item_txtId"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtAnio"
            android:layout_width="0dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtMes"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtPeriodo"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtZona"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtNroOrden"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/marco_item_txtEstado"
            android:layout_width="0dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</android.support.v7.widget.CardView>