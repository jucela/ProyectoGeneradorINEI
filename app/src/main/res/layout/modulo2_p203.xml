<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_2_p203"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_margin="@dimen/margen_small">
        <Spinner
            android:id="@+id/mod2_203_spinner_C2_P203"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawSelectorOnTop="true"
            android:entries="@array/modulo_2_p203_parentescos"/>
    </android.support.v7.widget.CardView>

</LinearLayout>