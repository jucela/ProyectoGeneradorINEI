<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edittext_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margen_small">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margen_medium">
        <TextView
            android:id="@+id/edittext_pregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="n. texto de la pregunta"
            android:textColor="@color/colorIneiPrimary"
            android:textStyle="bold"/>
        <include layout="@layout/edit_text_sp_layout" android:id="@+id/edittext_sp1" android:visibility="gone"/>
        <include layout="@layout/edit_text_sp_layout" android:id="@+id/edittext_sp2" android:visibility="gone"/>
        <include layout="@layout/edit_text_sp_layout" android:id="@+id/edittext_sp3" android:visibility="gone"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
